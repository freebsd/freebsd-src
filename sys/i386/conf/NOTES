hint.le.0.maddr="0xd0000"
device		rdp	1
hint.rdp.0.at="isa"
hint.rdp.0.port="0x378"
hint.rdp.0.irq="7"
hint.rdp.0.flags="2"
device		sbni
hint.sbni.0.at="isa"
hint.sbni.0.port="0x210"
hint.sbni.0.irq="0xefdead"
hint.sbni.0.flags="0"
device		oltr
hint.oltr.0.at="isa"
