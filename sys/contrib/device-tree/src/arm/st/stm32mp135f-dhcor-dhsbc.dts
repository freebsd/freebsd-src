			  "", "DHSBC_nTPM_CS", "", "";
};

&gpioc {
	gpio-line-names = "", "", "", "DHSBC_USB_5V_MEAS",
			  "", "", "", "",
			  "", "", "", "",
			  "", "", "", "";
};

&gpiod {
	gpio-line-names = "", "", "", "",
			  "", "DHCOR_RAM-CODING_0", "", "",
			  "", "DHCOR_RAM-CODING_1", "", "",
			  "", "", "", "";
