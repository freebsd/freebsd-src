				label = "dsa";
				phy-mode = "2500base-x";
				managed = "in-band-status";
				link = <&switch0port10>;
			};
		};
	};

	/* NOTE: this node name is ABI, don't change it! */
	switch2@12 {
		compatible = "marvell,turris-mox-mv88e6190", "marvell,mv88e6190";
		reg = <0x12>;
		dsa,member = <0 2>;
		interrupt-parent = <&moxtet>;
		interrupts = <MOXTET_IRQ_PERIDOT(2)>;
		status = "disabled";

