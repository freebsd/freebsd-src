			 <&pwm2_lpcg IMX_LPCG_CLK_1>;
		assigned-clocks = <&clk IMX_SC_R_PWM_2 IMX_SC_PM_CLK_PER>;
		assigned-clock-rates = <24000000>;
		#pwm-cells = <3>;
		interrupts = <GIC_SPI 96 IRQ_TYPE_LEVEL_HIGH>;
		status = "disabled";
	};

	lsio_pwm3: pwm@5d030000 {
