			   <MX8MN_IOMUXC_ENET_RXC_ENET1_RGMII_RXC	0x90>,
			   <MX8MN_IOMUXC_ENET_RX_CTL_ENET1_RGMII_RX_CTL	0x90>,
			   <MX8MN_IOMUXC_ENET_TX_CTL_ENET1_RGMII_TX_CTL	0x14>;
