device	ed11 at isa? port 0x00d0 irq 3 flags 0xe00000
# SN-9801-2
#device	ed11 at isa? port 0x00d0 irq 3 flags 0xe00001
device	ed12 at isa? port 0x20d0 irq 3 flags 0xf00000
