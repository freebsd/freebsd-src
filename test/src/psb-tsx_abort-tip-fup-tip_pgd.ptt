; Test that TSX aborts are shown correctly.
;
; Variant: the abort happens when executing the first instruction.
;          tracing is disabled after jumping to the abort handler.
;
; opt:ptxed --event:ip
;

org 0x100000
bits 64

; @pt p0: psb()
; @pt p1: fup(3: %l0)
; @pt p2: mode.exec(64bit)
; @pt p3: mode.tsx(begin)
; @pt p4: psbend()
l0:     hlt

; @pt p5: mode.tsx(abort)
; @pt p6: fup(1: %l0)
; @pt p7: tip(1: %l1)
l1:     hlt

; @pt p8: fup(1: %l1)
; @pt p9: tip.pgd(0: %l1)


; @pt .exp(ptdump)
;%0p0  psb
;%0p1  fup        3: %?l0
;%0p2  mode.exec  cs.l
;%0p3  mode.tsx   intx
;%0p4  psbend
;%0p5  mode.tsx   abrt
;%0p6  fup        1: %?l0.2
;%0p7  tip        1: %?l1.2
;%0p8  fup        1: %?l1.2
;%0p9  tip.pgd    0: %?l1.0


; @pt .exp(ptxed)
;[aborted, ip: %0l0]
;[interrupt, from: %0l0, to: %0l1]
;[disabled, at: %0l1]
