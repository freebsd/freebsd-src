; @pt p7: tip(1: %l3)
l1: jmp rax
l2: hlt

l3: nop

; @pt p8: fup(1: %l4)
; @pt p9: tip.pgd(0: %l4)
l4: hlt

section foo vstart=0xa000 start=0x1100
