libpath=../lib
examples="menu checklist radiolist mixedlist theme infobox yesno msgbox \
	datebox form timebox rangebox pause calendar gauge mixedgauge"

rm -f $examples

for e in $examples
do
	cc -g -Wall -Wextra -I$libpath ${e}.c -o $e -L$libpath -lbsddialog \
	-Wl,-rpath=$libpath
done
