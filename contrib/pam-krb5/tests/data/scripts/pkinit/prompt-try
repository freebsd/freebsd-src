[options]
    auth = no_ccache try_pkinit pkinit_user=FILE:%0 pkinit_prompt

[run]
    authenticate = PAM_SUCCESS

[prompts]
    echo_off = Insert smart card if desired, then press Enter: |

[output]
    INFO user %u authenticated as %u
