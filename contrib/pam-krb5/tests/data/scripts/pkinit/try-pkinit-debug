[options]
    auth = debug no_ccache try_pkinit pkinit_user=FILE:%0

[run]
    authenticate = PAM_SUCCESS

[output]
    DEBUG pam_sm_authenticate: entry
    INFO user %u authenticated as %u
    DEBUG pam_sm_authenticate: exit (success)
