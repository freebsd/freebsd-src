	: ${NANO_KERNEL:=GENERIC}
	: ${NANO_DRIVE:=ada0}
	: ${NANO_LAYOUT:=std-x86}
	: ${NANO_BOOT_MBR:=${NANO_WORLDDIR}/boot/boot0sio}
	: ${NANO_BOOT_BSD:=${NANO_WORLDDIR}/boot/boot}
}

std_mips ( ) {
	NANO_ENDIAN=big
}

std_mipsel ( ) {
}

std_mips64 ( ) {
	NANO_ENDIAN=big
}

std_mips64el ( ) {
}

