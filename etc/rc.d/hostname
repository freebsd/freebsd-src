# PROVIDE: hostname
# REQUIRE: mountcritlocal
# BEFORE:  netif
# KEYWORD: FreeBSD

. /etc/rc.subr

name="hostname"
start_cmd="hostname_start"
stop_cmd=":"

hostname_start()
{
	# Set the host name if it is not already set
	#
	if [ -z "`hostname -s`" ]; then
		hostname ${hostname}
		echo "Setting hostname: `hostname`."
	fi
}

load_rc_config $name
run_rc_command "$1"
