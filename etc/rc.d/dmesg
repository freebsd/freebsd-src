#!/bin/sh
#
# $NetBSD: dmesg,v 1.7 2002/03/22 04:16:39 lukem Exp $
#

# PROVIDE: dmesg
# REQUIRE: mountcritremote
# BEFORE:  DAEMON

. /etc/rc.subr

name="dmesg"
rcvar=$name
dmesg_file="/var/run/dmesg.boot"
start_cmd="do_dmesg"
stop_cmd=":"

do_dmesg()
{
	rm -f ${dmesg_file}
	( umask 022 ; /sbin/dmesg $rc_flags > ${dmesg_file} )
}

load_rc_config $name
run_rc_command "$1"
