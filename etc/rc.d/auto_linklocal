#!/bin/sh
#
# $FreeBSD$
#

# PROVIDE: auto_linklocal
# REQUIRE: root
# BEFORE:  sysctl

. /etc/rc.subr

name="auto_linklocal"
start_cmd="auto_linklocal_start"
stop_cmd=":"

auto_linklocal_start()
{
	if ! checkyesno ipv6_enable && ${SYSCTL} net.inet6 > /dev/null 2>&1; then
		${SYSCTL_W} net.inet6.ip6.auto_linklocal=0
	fi
}

load_rc_config $name
run_rc_command "$1"
