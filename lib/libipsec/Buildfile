LIBDIR = ${STAGEDIR}/lib

LIB = ipsec

SHLIB_MAJOR = 3

SRCS = \
	ipsec_dump_policy.c \
	ipsec_get_policylen.c \
	ipsec_strerror.c \
	policy_parse.y \
	policy_token.l

CFLAGS += -I. -I${.CURDIR}
CFLAGS += -DIPSEC_DEBUG -DIPSEC -DINET6

YFLAGS += -d -p __libipsecyy
LFLAGS += -P__libipsecyy

DIRDEP= include include/arpa stage sys/MACHINE_ARCH/include sys/net sys/netinet sys/netinet6 sys/netipsec sys/sys
.include <bsd.lib.mk>
