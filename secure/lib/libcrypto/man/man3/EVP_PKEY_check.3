\& int EVP_PKEY_param_check_quick(EVP_PKEY_CTX *ctx);
\& int EVP_PKEY_public_check(EVP_PKEY_CTX *ctx);
\& int EVP_PKEY_public_check_quick(EVP_PKEY_CTX *ctx);
