!ifdef SUBDIRS
subdirs:
	@for %%f in ( $(SUBDIRS) ) do @ (pushd %%f && $(RMAKE) && popd) || exit /b 1

clean-subdirs:
	@for %%f in ( $(SUBDIRS) ) do @ (pushd %%f && $(RMAKE) clean && popd) || exit /b 1

test-subdirs:
	@for %%f in ( $(SUBDIRS) ) do @ (pushd %%f && $(RMAKE) test && popd) || exit /b 1

all:: subdirs

clean:: clean-subdirs

test:: test-subdirs

!endif

