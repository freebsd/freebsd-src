FILES=		${LOCALES:S/$/.out/}
CLEANFILES=	${FILES}

.for f t in ${SAME}
DIRS+=		LOCALEDIR_$t
LOCALEDIR_$t=	${LOCALEDIR}/$t
LOCALEDIR_$tPACKAGE=	locales
SYMLINKS+=	../$f/${FILESNAME} \
    ${LOCALEDIR}/$t/${FILESNAME}
.endfor

.for f in ${LOCALES}
FILESDIR_${f}.out= ${LOCALEDIR}/${f}
FILESDIR_${f}.outPACKAGE=	locales
.endfor

