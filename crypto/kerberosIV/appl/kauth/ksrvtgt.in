#! /bin/sh
# $Id: ksrvtgt.in,v 1.3 1997/09/13 03:39:03 joda Exp $
# $FreeBSD$

usage="Usage: `basename $0` name instance [[realm] srvtab]"

if [ $# -lt 2 -o $# -gt 4 ]; then
	echo "$usage"
	exit 1
fi

srvtab="${4-${3-/etc/kerberosIV/srvtab}}"
realm="${4+@$3}"

%bindir%/kauth -n "$1.$2$realm" -l 5 -f "$srvtab"
