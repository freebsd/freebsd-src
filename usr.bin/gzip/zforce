prog=`basename $0`
USAGE="usage: $prog file ..."
if test $# -eq 0; then
	echo $USAGE
	exit 1
fi

ret=0

while test $# -ne 0; do
	case "$1" in
		*[._-]gz)
			shift
			;;
		*.t[ag]z)
			shift
			;;
		*)
			if file "$1" |
				grep -q "gzip compressed data" 2> /dev/null
			then
				n="$1".gz
				if mv "$1" "$n" 2> /dev/null; then
					echo "$1" -- renamed to "$n"
				else
					ret=1
					echo $prog: cannot rename "$1" to "$n"
				fi
			fi
			shift
			;;
	esac
done
exit $ret
