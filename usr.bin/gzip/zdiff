# Set $prog based on $0
case $0 in
	*cmp)	prog=cmp
		;;
	*)	prog=diff
		;;
esac
USAGE="usage: z$prog [options] file1 [file2]"

# Pull out any command line flags so we can pass them to diff/cmp
# XXX - assumes there is no optarg
flags=
while test $# -ne 0; do
	case "$1" in
		--)
			shift
			break
			;;
		-*)
			flags="$flags $1"
			shift
			;;
		*)
			break
			;;
	esac
done

if [ $# -eq 1 ]; then
	# One file given, compare compressed to uncompressed
	files="$1"
	case "$1" in
		*[._-][Zz])
			files="${1%??}"
			;;
		*[._-]gz)
			files="${1%???}"
			;;
		*.t[ag]z)
			files="${1%??}"ar
			;;
		*)	echo "z$prog: unknown suffix" 1>&2
			exit 1
	esac
	gzip -cdfq "$1" | $prog $flags - "$files"
	status=$?
elif [ $# -eq 2 ]; then
	# Two files given, compare the two uncompressing as needed
	case "$1" in
		*[._-][Zz]|*[._-]gz|*.t[ag]z)
			files=-
			filt="gzip -cdfq $1"
			;;
		*)
			files="$1"
			;;
	esac
	case "$2" in
		*[._-][Zz]|*[._-]gz|*.t[ag]z)
			if [ "$files" = "-" ]; then
				tmp=`mktemp -t z$prog.XXXXXXXXXX` || exit 1
				trap "rm -f $tmp" 0 1 2 3 13 15
				gzip -cdfq "$2" > $tmp
				files="$files $tmp"
			else
				files="$files -"
				filt="gzip -cdfq $2"
			fi
			;;
		*)
			files="$files $2"
			;;
	esac
	if [ -n "$filt" ]; then
		$filt | $prog $flags $files
	else
		$prog $flags $files
	fi
	status=$?
else
	echo "$USAGE" 1>&2
	exit 1
fi

exit $status
