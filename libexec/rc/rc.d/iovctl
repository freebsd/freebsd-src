#!/bin/sh
#
#

# PROVIDE: iovctl
# REQUIRE: FILESYSTEMS sysctl kld

. /etc/rc.subr

name="iovctl"
command="/usr/sbin/iovctl"
start_cmd="iovctl_start"
stop_cmd="iovctl_stop"

run_iovctl()
{
	local _f flag

	flag=$1
	for _f in ${iovctl_files} ; do
		if [ -r ${_f} ]; then
			${command} ${flag} -f ${_f} > /dev/null
		fi
	done
}

iovctl_start()
{
	run_iovctl -C
}

iovctl_stop()
{
	run_iovctl -D
}

load_rc_config $name

# doesn't make sense to run in a svcj: config setting
iovctl_svcj="NO"

run_rc_command "$1"
