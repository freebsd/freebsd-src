#!/bin/sh
#
# $FreeBSD$

: ${PJDFSTEST_TEST_PATH=.}
if ! cd ${PJDFSTEST_TEST_PATH}/; then
	echo 'Please set PJDFSTEST_TEST_PATH to a valid filesystem path'
	echo 'Bail out!'
	exit 1
fi

GREP=grep
mountpoint=$(df . | tail -1 | awk '{print $6}')
fs=$(mount -p | awk '$2 == "'$mountpoint'" { print toupper($3) }')
os=FreeBSD
